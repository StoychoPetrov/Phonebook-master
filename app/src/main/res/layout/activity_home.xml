<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.stoycho.phonebook.activities.HomeActivity">

    <!-- App bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bar"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="@string/contacts"/>

    </RelativeLayout>

    <!-- Main layout which will be replaced in fragment manager -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/replace_layout"
        android:layout_below="@+id/bar"
        android:background="@android:color/white">

        <!-- Layout for filter which is visible when there are more than one contact -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:id="@+id/search_bar"
            android:background="@drawable/edittext_drawable"
            android:layout_margin="20dp"
            android:visibility="gone">
            <!-- Layout about filter by country -->
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:id="@+id/select_country"
               android:layout_weight="1">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/country"
                   android:text="@string/country"
                   android:paddingLeft="10dp"
                   android:paddingRight="10dp"
                   android:layout_centerVertical="true"
                   android:textSize="20sp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/filter_country"
                   android:text="@string/all"
                   android:layout_toRightOf="@+id/country"
                   android:layout_toEndOf="@+id/country"
                   android:layout_centerVertical="true"
                   android:paddingLeft="10dp"
                   android:paddingRight="10dp"
                   android:textSize="20sp"/>

           </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

            <!-- Layout about filter by gender -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/select_gender"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gender"
                    android:text="@string/gender"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/filter_gender"
                    android:text="@string/all"
                    android:layout_toRightOf="@+id/gender"
                    android:layout_toEndOf="@+id/gender"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="20sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>

        </LinearLayout>
        <!-- Recycler view about contacts -->
       <android.support.v7.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:scrollbars="vertical"
           android:id="@+id/recycleView"
           android:layout_below="@+id/search_bar" />

        <!-- Button for add a new contact -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/button_states"
            android:gravity="center"
            android:id="@+id/add_user"
            android:layout_below="@+id/recycleView"
            android:layout_centerHorizontal="true"
            android:text="@string/new_contact"
            android:textStyle="bold"
            android:textColor="@drawable/button_text_drawable"
            android:drawableLeft="@android:drawable/ic_input_add"
            android:drawableStart="@android:drawable/ic_input_add"
            android:drawablePadding="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</RelativeLayout>
