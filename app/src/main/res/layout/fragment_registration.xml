<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        tools:context="com.example.stoycho.phonebook.fragments.RegistrationFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/info_first_name"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_weight="0.5"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/first_name"
                android:textColorHint="@android:color/darker_gray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:inputType="text"
                android:nextFocusDown="@+id/last_name"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/info_last_name"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:layout_weight="0.5"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/last_name"
                android:textColorHint="@android:color/darker_gray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:lines="1"
                android:maxLines="1"
                android:inputType="text"
                android:nextFocusDown="@+id/email"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/info_country"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:layout_weight="0.5"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/country"
                android:textColorHint="@android:color/darker_gray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:lines="1"
                android:focusable="false"
                android:inputType="text"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/info_email"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:layout_weight="0.5"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/email"
                android:textColorHint="@android:color/darker_gray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/phone_txt"
                android:text="@string/info_phone_number"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"/>

            <!-- TextView about calling code of country -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/callingCode"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:visibility="gone"/>

            <!-- TextView about phone number of contact -->
            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/phone_number"
                android:textColorHint="@android:color/darker_gray"
                android:lines="1"
                android:inputType="phone"
                android:layout_weight="1"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Radio group about selecting gender -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gender_txt"
                android:text="@string/info_gender"
                android:textSize="17sp"
                android:textColor="@android:color/black" />

            <!-- Radio group about filter by gender -->
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/gender_radio"
                android:layout_below="@+id/gender_txt"
                android:layout_toRightOf="@+id/gender_txt"
                android:layout_toEndOf="@id/gender_txt"
                android:checkedButton="@+id/all"
                android:visibility="visible">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/male"
                    android:text="@string/male"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/female"
                    android:text="@string/female"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

            </RadioGroup>

        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add"
            android:layout_marginTop="10dp"
            android:text="@string/save"
            android:background="@android:color/transparent"
            android:layout_gravity="right"/>

    </LinearLayout>
</ScrollView>
